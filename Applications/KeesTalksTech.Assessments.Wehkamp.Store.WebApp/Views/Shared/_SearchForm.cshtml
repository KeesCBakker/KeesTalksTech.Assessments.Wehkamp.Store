@model string
<div class="row row-search">
    <br/>
</div>
<div class="row row-search">
    <div class="col-md-6">
        <form asp-controller="Search" asp-action="Index" method="get" role="search" class="search-form" name="search-form">
            <span class="input-group">
                <input name="query" class="form-control" placeholder="Search" value="@Model" />
                <div class="input-group-btn">
                    <button type="submit" class="btn"><span class="glyphicon glyphicon-search"></span></button>
                </div>
            </span>
        </form>
    </div>
    <div class="col-md-6">
        <button type="button" class="btn btn-random" onclick="document.location = '/'; return false;">Random me 20!</button>
    </div>
</div>